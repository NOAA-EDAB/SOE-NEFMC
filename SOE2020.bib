	month = feb,
	year = {2016},
	keywords = {Fisheries, Marine ecology, ocean temperature, Invertebrates, Marine fish, Oceans, Habitats, climate change},
	pages = {e0146756},
	file = {Full Text PDF:/Users/sgaichas/Zotero/storage/S8WFBK9W/Hare et al. - 2016 - A Vulnerability Assessment of Fish and Invertebrat.pdf:application/pdf;Snapshot:/Users/sgaichas/Zotero/storage/7UQ3W35C/article.html:text/html}
