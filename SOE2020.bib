	pages = {1--11},
	file = {Perretti et al. - 2017 - Regime shifts in fish recruitment on the Northeast.pdf:/Users/sgaichas/Zotero/storage/7QCFZSR9/Perretti et al. - 2017 - Regime shifts in fish recruitment on the Northeast.pdf:application/pdf}
