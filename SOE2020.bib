	urldate = {2019-02-14},
	journal = {PLOS ONE},
	author = {Bi, Hongsheng and Ji, Rubao and Liu, Hui and Jo, Young-Heon and Hare, Jonathan A.},
	month = jan,
	year = {2014},
	keywords = {Seasons, Maine, Ecosystems, Copepods, Sea water, Seasonal variations, Time series analysis, Zooplankton},
